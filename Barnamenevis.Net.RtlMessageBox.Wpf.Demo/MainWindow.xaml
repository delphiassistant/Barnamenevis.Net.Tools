<Window x:Class="Barnamenevis.Net.RtlMessageBox.Wpf.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WPF RTL MessageBox Demo" Height="350" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0 0 0 12">
            <TextBlock Text="نمونه‌های استفاده از WPF RtlMessageBox" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="(Pure WPF, themed, RTL + Persian buttons, custom font)" FontSize="11" Foreground="Gray"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <!-- WPF RtlMessageBox examples (pure WPF) -->
            <WrapPanel ItemHeight="32" ItemWidth="240" Margin="0 0 0 8">
                <Button Content="WPF: OK" Margin="0 0 12 12" Click="BtnThOk_Click"/>
                <Button Content="WPF: OK/Cancel + Info" Margin="0 0 12 12" Click="BtnThOkCancel_Click"/>
                <Button Content="WPF: Yes/No + Question" Margin="0 0 12 12" Click="BtnThYesNo_Click"/>
                <Button Content="WPF: Yes/No/Cancel + Warning" Margin="0 0 12 12" Click="BtnThYesNoCancel_Click"/>
                <Button Content="WPF: Error Dialog" Margin="0 0 12 12" Click="BtnThError_Click"/>
            </WrapPanel>
        </StackPanel>

        <TextBlock x:Name="ResultText" Grid.Row="2" Text="Result: -" FontWeight="SemiBold"/>
    </Grid>
</Window>
